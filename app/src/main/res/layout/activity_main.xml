<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <!-- android:id="@id/edit_username"-->
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:background="#00000000"
        android:hint="@string/str_edit_username"
        android:paddingLeft="16dp" />
    

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="#00000000"
        android:hint="@string/str_edit_password"
        android:paddingLeft="16dp" />
    

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="15dp">

     
        <TextView
            android:id="@+id/find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_find_password"
            android:textColor="@color/co_other_words"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/smsRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="手机注册"
            android:textColor="@color/co_other_words"
            android:textSize="15sp" />

        <!--<TextView-->
            <!--android:id="@+id/registerbtn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:text="@string/str_login"-->
            <!--android:textColor="@color/co_other_words"-->
            <!--android:textSize="15sp" />-->

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_info"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        >
      
        <Button
            android:id="@+id/qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/qq"
            android:layout_marginLeft="15dp"/>
        
      
        <Button
            android:id="@+id/weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/weibo"
            android:layout_marginLeft="60dp"/>
        
        
        <Button
            android:id="@+id/weix"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/weix"
            android:layout_marginLeft="60dp"/>



    </LinearLayout>


</LinearLayout>
