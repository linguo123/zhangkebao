<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundre"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/no2ing" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center">

        <ImageButton
            android:id="@+id/infoBack"
            android:layout_width="20dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/smssdk_back_arrow" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="完善信息"
            android:textSize="20dp"

            />
        <ImageButton
            android:id="@+id/infoNext"
            android:layout_width="30dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/smssdk_arrow_right" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="姓 名:"
            android:textSize="15dp"
            android:layout_weight="0"/>

        <EditText
            android:inputType=""
            android:id="@+id/infoName"
            android:layout_weight="0"
           android:layout_width="280dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="性 别:"
            android:textSize="15dp"
            android:layout_weight="0"/>

        <Button
            android:id="@+id/man"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#1C86EE"
            android:text="男"
            />
        <Button
            android:id="@+id/woman"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:text="女" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="高考所在地:"
            android:textSize="15dp"
            android:layout_weight="0"/>
        <!--<Spinner-->
            <!--android:id="@+id/s1_sp"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->
        <!--<Spinner-->
            <!--android:id="@+id/s2_sp"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->

        <Button
            android:id="@+id/gaokao_btn"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="@string/jisntou"
            android:background="@drawable/backgroundre"/>

        <EditText
            android:inputType=""
            android:id="@+id/brAddress"
            android:layout_weight="0"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请选择省市区"
            android:focusable="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="学校所在地:"
            android:textSize="15dp"
            android:layout_weight="0"/>
        <Button
            android:id="@+id/scadd_btn"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="@string/jisntou"
            android:background="@drawable/backgroundre"/>

        <EditText
            android:inputType=""
            android:id="@+id/scAddress"
            android:layout_weight="0"
            android:layout_width="200dp"
            android:hint="请选择省市区"
            android:layout_height="wrap_content"
            android:focusable="false"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="学 校:"
            android:textSize="15dp"
            android:layout_weight="0"/>

        <EditText
            android:inputType=""
            android:id="@+id/infoSchool"
            android:layout_weight="0"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="年 级:"
            android:textSize="15dp"
            android:layout_weight="0"/>

        <EditText
            android:inputType=""
            android:id="@+id/Grade"
            android:layout_weight="0"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="班 级:"
            android:textSize="15dp"
            android:layout_weight="0"/>

        <EditText
            android:id="@+id/infoClass"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:inputType="" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*由于高考改革，为保证推荐结果正确，请正确填写信息"
        android:layout_weight="0"
        android:textColor="#ff0000"
        android:layout_marginTop="15dp"
        android:textSize="13dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/reg_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册即代表您已同意掌课宝用户协议"
        android:layout_weight="0"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/perfectInfo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="注册" />
</LinearLayout>